{
  "version": "0.3.0",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "forcePublish": true,
      "skipGit": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  }
}
